float x1 = 0;
float y1 = 0;
int w1 = 100;
int h1 = 100;

PFont startFont;

void setup(){
  size(800,800);
  
  w1 = 120;
  h1 = 30;
  x1 = width*0.5 - w1*0.5;
  y1 = height*0.5 - h1*0.5;
  
  startFont = createFont("BLACEB__.TTF", 32);
}

void draw(){
  background(255);
  noStroke();
  
  fill(0,255,0);
  rect(x1 - w1* 0.5,y1-h1*0.5,w1,h1);
  
  if(mouseX > x1 && mouseX < x1 + w1 && mouseY > y1 && mouseY < y1 + h1){
    fill(0);
    textFont(startFont);
    textSize(90);
    textAlign(CENTER);
    text("GAME OVER", width * 0.5, height*0.5);
    stop();
}
}
